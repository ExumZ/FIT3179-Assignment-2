{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A population pyramid for the US in 2000.",
    "data": { "url": "https://raw.githubusercontent.com/ExumZ/FIT3179-Assignment-2/main/main_data/migrant_stock_gender_data_2020.csv"},
    "spacing": 0,
    "hconcat": [
        {
            "transform": [
                {
                    "filter": {"field": "Gender", "equal": "Female"}
                }
            ],
            "title": "Female",
            "mark": "bar",
            "encoding": {
                "y": {
                    "field": "ageGroup", "axis": null, "sort": "ascending"
                },
                "x": {
                    "aggregate": "sum", "field": "migrantStock",
                    "title": "population",
                    "axis": {"format": "s"},
                    "sort": "descending"
                },
                "color": {
                    "field": "Gender",
                    "scale": {"range": ["#675193", "#ca8861"]},
                    "legend": null
                }
            }
        }, 
        {
            "width": 20,
            "view": {"stroke": null},
            "mark": {
                "type": "text",
                "align": "center"
            },
            "encoding": {
                "y": {"field": "ageGroup", "type": "ordinal", "axis": null, "sort": "ascending"},
                "text": {"field": "ageGroup", "type": "nominal"}
            }
        }, 
        {
            "transform": [{
                "filter": {"field": "Gender", "equal": "Male"}
            }],
            "title": "Male",
            "mark": "bar",
            "encoding": {
                "y": {
                    "field": "ageGroup", "title": null,
                    "axis": null, "sort": "ascending"
                },
                "x": {
                    "aggregate": "sum", "field": "migrantStock",
                    "title": "population",
                    "axis": {"format": "s"}
                },
                "color": {
                    "field": "Gender",
                    "legend": null
                }
            }
        }
    ],
    "config": {
      "view": {"stroke": null},
      "axis": {"grid": false}
    }
}